<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"> <!-- dark bg like your screenshot -->


    <!-- Tabs (Date / Time) -->

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/agbalumo"
        android:gravity="center"
        android:paddingTop="6dp"
        android:text="Choose \nyour special date"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@android:color/black"
        app:tabTextColor="#AAAAAA"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabRippleColor="@android:color/transparent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/tab_selector_bg"/>



    <!-- Picker container -->
    <FrameLayout
        android:id="@+id/pickerContainer"
        android:layout_width="0dp"
        android:layout_height="360dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <!-- Rounded rectangle background similar to screenshot -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/picker_bg" />

        <!-- Horizontal layout with 3 wheels for Date (Month | Day | Year) -->
        <LinearLayout
            android:id="@+id/dateWheelsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_month"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingTop="90dp"
                android:paddingBottom="90dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_day"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:clipToPadding="false"
                android:paddingTop="90dp"
                android:paddingBottom="90dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_year"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:clipToPadding="false"
                android:paddingTop="90dp"
                android:paddingBottom="90dp"/>
        </LinearLayout>

        <!-- Time wheels (hidden initially) -->
        <LinearLayout
            android:id="@+id/timeWheelsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_hour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingTop="90dp"
                android:paddingBottom="90dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_minute"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingTop="90dp"
                android:paddingBottom="90dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ampm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:clipToPadding="false"
                android:paddingTop="90dp"
                android:paddingBottom="90dp"/>
        </LinearLayout>

        <!-- overlay center highlight (rounded rectangle) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@drawable/center_highlight"/>


    </FrameLayout>

    <!-- Get Started button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_dark_pink_button"
        android:drawableEnd="@drawable/ic_arrow"
        android:drawablePadding="8dp"
        android:drawableTint="@color/white"
        android:layout_marginBottom="64dp"
        android:elevation="8dp"
        android:paddingLeft="32dp"
        android:paddingTop="12dp"
        android:paddingRight="32dp"
        android:paddingBottom="12dp"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
