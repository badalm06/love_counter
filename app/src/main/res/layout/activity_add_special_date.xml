<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_pink"
    android:id="@+id/main">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button1"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/agbalumo"
            android:text="♡  Milestones  ♡"
            android:layout_marginRight="38dp"
            android:textColor="#E91E63"
            android:textAlignment="center"
            android:textSize="32sp" />

    </LinearLayout>


    <!-- Button to open native date picker -->

    <!-- TextView to show selected date -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_pick_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_dark_pink_button"
        android:fontFamily="@font/adamina"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Select Date"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tv_selected_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No date selected"
        android:layout_margin="24dp"
        android:fontFamily="@font/adamina"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_pick_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Note input -->
    <EditText
        android:id="@+id/et_note"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:hint="Add a note (optional)"
        android:background="@drawable/edit_text_bg"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_margin="24dp"
        android:gravity="top|start"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_selected_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Save button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:fontFamily="@font/adamina"
        android:textSize="14sp"
        android:layout_margin="24dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:background="@drawable/rounded_dark_pink_button"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/et_note"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- RecyclerView to show saved special dates -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_special_dates"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
